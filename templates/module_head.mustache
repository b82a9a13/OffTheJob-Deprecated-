<h2 class="bold text-center">{{mod_c}} - {{username}} - {{coursename}}</h2>
<h3 class="bold text-center">{{prog_b}}</h3>
<div id="progress" class="w-75 center d-flex">
    <div id="progressbar"></div>
    <div id="expectedbar"></div>
</div>
<ul class="w-75 center">
    <li class="d-flex">
        <div id="progressdiv"></div>
        <p>{{prog}}</p>
        <p id="progressp"></p>
    </li>
    <li class="d-flex">
        <div id="expecteddiv"></div>
        <p>{{expect}}</p>
        <p id="expectedp"></p>
    </li>
    <li class="d-flex">
        <div id="incompletediv"></div>
        <p>{{incomp}}</p>
        <p id="incompletep"></p>
    </li>
</ul>
<style>
.center{
    margin-left: auto;
    margin-right: auto;
}
#progress{
    background: red;
}
#incompletediv, #progressdiv, #expecteddiv{
    width: 25px;
    height: 25px;
}
#incompletediv{
    background: red;
}
#progressdiv{
    background: green;
}
#expecteddiv{
    background: orange;
}
</style>
<script>
const expected = {{expected}};
const percent = {{percent}};
const progressbar = document.getElementById('progressbar');
const incomplete = 100 - percent;
if(percent >= expected){
    progressbar.style = "width: {{percent}}%; height: 25px; background-color: green;";
} else{
    const difference = expected - percent;
    progressbar.style = "width: {{percent}}%; height: 25px; background-color: green;";
    document.getElementById('expectedbar').style = `width: ${difference}%; height: 25px; background-color: orange;`
}
document.getElementById('progressp').innerText = `: ${percent}%`;
document.getElementById('expectedp').innerText = `: ${expected}%`;
document.getElementById('incompletep').innerText = `: ${incomplete}%`;
</script>