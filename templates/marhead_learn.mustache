<button onclick="window.location.href='otj_doc_learn.php?courseid={{courseid}}'" type="button" class="btn-primary mb-2 mr-2 p-2" {{hiddenback}}>{{bta}}</button>
<h1 class="bold text-center">{{mar}}</h1>
<h2 class="bold">{{docs}}</h2>
<ol>
    {{#array}}
        <li>
            <div class="d-flex mb-2 p-2">
            <h3 class="bold">{{1}} </h3>
            <form method="POST" action="./classes/inc/otj_doc_learn_update.inc.php?courseid={{courseid}}">
                <button type="submit" class="btn-primary mb-2 mr-2 p-2" {{hidden1}} name="submit">Update</button>
                <input type="text" hidden value="{{0}}" name="id">
            </form>
                <button type="submit" class="btn-primary mb-2 mr-2 p-2" {{hidden1}} name="sumbit" onclick="pdf_open('./classes/pdf/marpdf_learn_single.php?courseid={{courseid}}&id={{0}}', './classes/pdf/employercomment_learn.php?courseid={{courseid}}&id={{0}}')">PDF</button>
            </div>
        </li>
    {{/array}}
</ol>
<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.4);
    }
    .modal_content{
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }
    .close:hover, .close:focus{
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
</style>
<script>
    let array = [];
    {{#array}}
        array.push(["del_modal{{0}}", "close{{0}}", "no{{0}}", "sub-btn{{0}}"]);
    {{/array}}
    array.forEach((arr) => {
        let modal = document.getElementById(arr[0]);
        let span = document.getElementById(arr[1]);
        let no = document.getElementById(arr[2]);
        let btn = document.getElementById(arr[3]);
        span.onclick = function (){
            modal.style.display = "none";
        }
        btn.onclick = function (){
            modal.style.display = "block";
        }
        window.onclick = function (event){
            if(event.target == modal){
                modal.style.display = "none";
            }
        }
        no.onclick = function (){
            modal.style.display = "none";
        }
    })
    function pdf_open(one, two){
        window.open(one)
        window.open(two)
    }
</script>